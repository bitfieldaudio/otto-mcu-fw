deploy-otto-ssh: all
	-scp $(BUILD_DIR)/$(TARGET).elf root@$(IP):~/otto-mcu-fw/otto-mcu-fw.elf && ssh -t root@$(IP) 'cd otto-mcu-fw && ./load-otto-mcu-fw.sh'

# If the first argument is "run"...
ifeq (stm32flash,$(firstword $(MAKECMDGOALS)))
  # use the rest as arguments for "run"
  RUN_ARGS := $(wordlist 2,$(words $(MAKECMDGOALS)),$(MAKECMDGOALS))
  # ...and turn them into do-nothing targets
  $(eval $(RUN_ARGS):;@:)
endif

stm32flash: all
	-sudo stm32flash -w $(BUILD_DIR)/$(TARGET).bin -v -g 0x0 $(RUN_ARGS)

